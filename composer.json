{
    "name": "methorz/http-request-logger",
    "description": "PSR-3 HTTP request logging middleware with request tracking and performance monitoring",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "http",
        "logging",
        "middleware",
        "psr-3",
        "psr-15",
        "request-id",
        "performance",
        "monitoring"
    ],
    "authors": [
        {
            "name": "Thorsten Merz",
            "email": "methorz@spammerz.de"
        }
    ],
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4 || ^8.5",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^3.0",
        "monolog/monolog": "^3.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0 || ^11.0",
        "slevomat/coding-standard": "^8.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "MethorZ\\RequestLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MethorZ\\RequestLogger\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "analyze": "phpstan analyze --memory-limit=256M",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
